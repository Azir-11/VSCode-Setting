{
  // ========== 视觉设置 ==========
  "editor.cursorSmoothCaretAnimation": "on", // 启用光标平滑动画效果
  "editor.fontFamily": "Input Mono, monospace", // 主字体设置（优先使用Input Mono字体）
  "editor.guides.bracketPairs": "active", // 只在活动括号时显示配对引导线
  // 控制行号的显示。
  //  - off: 不显示行号。
  //  - on: 将行号显示为绝对行数。
  //  - relative: 将行号显示为与光标相隔的行数。
  //  - interval: 每 10 行显示一次行号。
  "editor.lineNumbers": "interval",
  "editor.renderWhitespace": "selection", // 仅在选中文本时显示空白字符
  "window.autoDetectColorScheme": true, // 自动跟随系统深色/浅色模式
  "workbench.colorTheme": "Eva Dark", // 使用Eva Dark颜色主题
  "workbench.editor.tabActionLocation": "left", // 编辑器标签操作按钮显示在左侧
  "workbench.fontAliasing": "antialiased", // 字体抗锯齿渲染
  "workbench.iconTheme": "material-icon-theme", // 使用Material图标主题
  "workbench.list.smoothScrolling": true, // 列表平滑滚动
  "workbench.preferredDarkColorTheme": "Eva Dark", // 深色模式首选主题
  "workbench.preferredLightColorTheme": "Eva Dark", // 浅色模式也强制使用Eva Dark
  "workbench.productIconTheme": "icons-carbon", // 使用Carbon风格产品图标
  "workbench.sideBar.location": "left", // 侧边栏固定在左侧
  // "workbench.startupEditor": "newUntitledFile", // 启动时新建空白文件
  "workbench.tree.expandMode": "singleClick", // 单击展开树形目录
  "workbench.tree.indent": 10, // 树形视图缩进10像素
  // ========== 编辑器行为 ========== 
  "debug.onTaskErrors": "debugAnyway", // 即使有任务错误也继续调试
  "diffEditor.ignoreTrimWhitespace": false, // 差异比较时不忽略行尾空格
  "editor.wordSeparators": "`~!@#%^&*()=+[{]}\\|;:'\",.<>/?", // 自定义单词分隔符
  "editor.find.addExtraSpaceOnTop": false, // 搜索框顶部不添加空白
  "editor.inlineSuggest.enabled": true, // 启用行内代码建议
  "editor.multiCursorModifier": "ctrlCmd", // 使用Ctrl/Cmd键创建多光标
  "editor.suggestSelection": "first", // 自动选择建议列表第一项
  "editor.tabSize": 2, // Tab缩进2个空格
  "editor.unicodeHighlight.invisibleCharacters": false, // 不显示不可见Unicode字符
  "editor.stickyScroll.enabled": true, // 启用粘性滚动（显示当前作用域）
  "editor.hover.sticky": true, // 悬停提示保持可见直到主动关闭
  "editor.codeActionsOnSave": { // 保存时的代码操作
    "source.fixAll": "never", // 不自动修复所有问题
    "source.fixAll.eslint": "explicit", // 仅显式运行ESLint修复
    // "source.organizeImports": "never" // 不自动整理import
  },
  "explorer.confirmDelete": false, // 删除文件无需确认
  "explorer.confirmDragAndDrop": false, // 拖放文件无需确认
  "files.eol": "\n", // 使用LF换行符
  "files.insertFinalNewline": true, // 文件末尾自动插入空行
  "files.simpleDialog.enable": true, // 使用简单文件对话框
  "git.autofetch": true, // 自动获取远程更新
  "git.confirmSync": false, // 同步前无需确认
  "git.enableSmartCommit": true, // 启用智能提交（自动暂存所有更改）
  "git.untrackedChanges": "separate", // 未跟踪文件单独显示
  "scm.diffDecorationsGutterWidth": 2, // 版本控制装饰线宽度2px
  "terminal.integrated.cursorBlinking": true, // 终端光标闪烁
  "terminal.integrated.cursorStyle": "line", // 终端光标样式为竖线
  "terminal.integrated.fontWeight": "300", // 终端字体细体（300权重）
  "terminal.integrated.persistentSessionReviveProcess": "never", // 不保留终端进程
  "terminal.integrated.tabs.enabled": true, // 启用终端标签页
  "workbench.editor.closeOnFileDelete": true, // 文件删除时关闭对应编辑器
  "workbench.editor.highlightModifiedTabs": true, // 高亮已修改的标签页
  "workbench.editor.limit.enabled": true, // 启用编辑器标签页数量限制
  "workbench.editor.limit.perEditorGroup": true, // 每个编辑器组单独限制
  "workbench.editor.limit.value": 5, // 每个编辑器组最多5个标签页
  // ========== 文件搜索排除规则 ==========
  "search.exclude": {
    "**/*.snap": true, // 排除Jest快照文件
    "**/*.svg": true, // 排除SVG图像文件
    "**/.git": true, // 排除.git目录
    "**/.github": false, // 包含.github目录
    "**/.nuxt": true, // 排除Nuxt生成目录
    "**/.output": true, // 排除Nitro输出目录
    "**/.pnpm": true, // 排除pnpm目录
    "**/.vscode": true, // 排除VSCode配置目录
    "**/.yarn": true, // 排除Yarn目录
    "**/assets": true, // 排除assets目录
    "**/bower_components": true, // 排除bower组件
    "**/dist/**": true, // 排除dist构建目录
    "**/logs": true, // 排除日志目录
    "**/node_modules": true, // 排除node_modules
    "**/out/**": true, // 排除out输出目录
    "**/package-lock.json": true, // 排除npm锁文件
    "**/pnpm-lock.yaml": true, // 排除pnpm锁文件
    "**/public": true, // 排除public目录
    "**/temp": true, // 排除临时目录
    "**/yarn.lock": true, // 排除yarn锁文件
    "**/CHANGELOG*": true, // 排除变更日志
    "**/LICENSE*": true, // 排除许可证文件
  },
  // ========== 全局配置 ========== 
  "window.dialogStyle": "custom", // 使用自定义对话框样式
  "window.nativeTabs": true, // 使用系统原生标签页（仅macOS有效）
  "window.title": "${rootName}", // 窗口标题只显示根目录名
  "window.titleBarStyle": "custom", // 自定义标题栏样式
  "extensions.autoUpdate": "onlyEnabledExtensions", // 只自动更新已启用扩展
  // ========== 扩展配置 ========== 
  "emmet.showSuggestionsAsSnippets": true, // Emmet建议显示为代码片段
  "emmet.triggerExpansionOnTab": false, // 禁用Tab键触发Emmet扩展
  "errorLens.enabledDiagnosticLevels": [ // ErrorLens显示的诊断级别
    "warning", // 显示警告
    "error" // 显示错误
  ],
  "errorLens.excludeBySource": [ // 排除特定来源的诊断
    "cSpell", // 忽略拼写检查
    "Grammarly", // 忽略语法检查
    "eslint" // 忽略ESLint
  ],
  // ========== ESLint 配置 ========== 
  "eslint.codeAction.showDocumentation": { // 显示ESLint规则文档
    "enable": true // 启用文档显示功能
  },
  "eslint.quiet": true, // 静默模式（仅显示错误忽略警告）
  "eslint.rules.customizations": [ // 自定义规则严重级别
    {
      "rule": "style/*",
      "severity": "off"
    }, // 关闭所有样式规则
    {
      "rule": "format/*",
      "severity": "off"
    }, // 关闭所有格式规则
    {
      "rule": "*-indent",
      "severity": "off"
    }, // 关闭缩进相关规则
    {
      "rule": "*-spacing",
      "severity": "off"
    }, // 关闭间距相关规则
    {
      "rule": "*-spaces",
      "severity": "off"
    }, // 关闭空格相关规则
    {
      "rule": "*-order",
      "severity": "off"
    }, // 关闭顺序相关规则
    {
      "rule": "*-dangle",
      "severity": "off"
    }, // 关闭拖尾符号规则
    {
      "rule": "*-newline",
      "severity": "off"
    }, // 关闭换行相关规则
    {
      "rule": "*quotes",
      "severity": "off"
    }, // 关闭引号类型规则
    {
      "rule": "*semi",
      "severity": "off"
    } // 关闭分号规则
  ],
  "eslint.validate": [ // ESLint校验的文件类型
    "javascript", // JavaScript文件
    "javascriptreact", // JSX文件
    "typescript", // TypeScript文件
    "typescriptreact", // TSX文件
    "vue", // Vue文件
    "html", // HTML文件
    "markdown", // Markdown文件
    "json", // JSON文件
    "jsonc", // JSONC文件
    "yaml", // YAML文件
    "toml" // TOML文件
  ],
  // ========== GitHub Copilot 配置 ==========
  "github.copilot.enable": { // Copilot启用配置
    "*": true, // 所有文件类型默认启用
    "markdown": true, // Markdown文件启用
    "plaintext": false // 纯文本文件禁用
  },
  "cSpell.allowCompoundWords": true, // 允许复合词拼写
  "cSpell.language": "en,en-US", // 使用美式英语词典
  "css.lint.hexColorLength": "ignore", // 忽略HEX颜色长度警告
  "githubIssues.workingIssueFormatScm": "#${issueNumberLabel}", // SCM中问题编号格式
  "githubPullRequests.fileListLayout": "tree", // PR文件树状展示
  "gitlens.codeLens.authors.enabled": false, // 禁用代码作者标注
  "gitlens.codeLens.enabled": false, // 完全禁用代码透镜
  "gitlens.codeLens.recentChange.enabled": false, // 禁用最近更改标注
  "gitlens.menus": { // GitLens菜单配置
    "editor": {
      "blame": false, // 编辑器右键不显示blame
      "clipboard": true, // 启用剪贴板操作
      "compare": true, // 启用比较功能
      "history": false, // 禁用历史记录
      "remote": false // 禁用远程操作
    },
    "editorGroup": {
      "blame": true,
      "compare": false
    },
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },
  "i18n-ally.autoDetection": false, // 禁用自动检测语言
  "i18n-ally.displayLanguage": "zh", // 显示语言为中文
  "i18n-ally.ignoredLocales": [], // 不忽略任何区域设置
  "iconify.annotations": true, // 启用图标注释
  "iconify.inplace": true, // 行内显示图标预览
  "svg.preview.mode": "svg", // SVG预览模式
  // ========== Prettier 配置 ==========
  "prettier.enable": false, // 完全禁用Prettier
  "prettier.printWidth": 200, // 换行长度200字符
  "prettier.semi": false, // 不使用分号
  "prettier.singleQuote": true, // 使用单引号
